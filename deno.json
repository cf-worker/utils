{
  "name": "@cf-worker/utils",
  "version": "0.2.14",
  "exports": "./mod.ts",
  "imports": {
    "@std/assert": "jsr:@std/assert@^0.226.0",
    "@std/fs": "jsr:@std/fs@^0.229.3",
    "@std/testing": "jsr:@std/testing@^0.225.3",
    "bun:test": "./bun_test.deno.ts"
  },
  "publish": {
    "include": ["**/*.ts"],
    "exclude": ["**/*.test.ts"]
  },
  "compilerOptions": {},
  "tasks": {
    "test": "deno test -A --doc --parallel --check",
    "publish:dry": "deno publish --dry-run --allow-dirty",
    "fmt": "deno fmt",
    "lint": "deno lint --fix --compact",
    "publish": "deno publish",
    "build:mod": "deno run -A build-mod.deno.ts",
    "git-pre-commit": "deno task test && deno task fmt && deno task lint",
    "git-pre-commit:install": "test -e '.git' && git config core.hooksPath ./.githooks",
    "coverage": "rm -rf coverage; deno test -A --clean --parallel --coverage; deno coverage --html; echo open coverage/html/index.html"
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 120,
    "semiColons": false,
    "singleQuote": false,
    "useTabs": false,
    "proseWrap": "preserve"
  }
}
